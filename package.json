{
  "name": "feature-manager",
  "version": "0.0.0",
  "description": "Feature Flag Manager",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "lint:check": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint:check -- --fix",
    "format": "prettier --config .prettierrc --write \"**/*.ts\"",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "test": "jest --config ./test/jest.json",
    "lint-staged": "lint-staged"
  },
  "keywords": [
    "feature-flag",
    "feature-toggle",
    "feature-flag-manager",
    "feature-manager"
  ],
  "author": {
    "name": "Ashish K. Poudel",
    "email": "routeasis@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
